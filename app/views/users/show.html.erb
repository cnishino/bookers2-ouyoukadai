<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books, book_detail: @book_detail %>
      <div class = "table_width">
       <table class="table table-bordered">
        <thead>
         <tr>
          <th>今日の投稿数</th>
          <th>前日の投稿数</th>
          <th>前日比</th>
         </tr>
        </thead>
        <tbody>
         <tr>
         　<td><%= @today_book.count %></td>
         　<td><%= @yesterday_book.count %></td>
         　<td>
           <% if @yesterday_book.count == 0 %>
            前日の投稿はありません
           <% else %>
           　<% @the_day_before =   @today_book.count / @yesterday_book.count.to_f  %> <!--to_fメソッドはオブジェクトの少数点までの数値も表示-->
           　<%= (@the_day_before * 100).round %>
           <% end %>
          </td>
         </tr>
        </tbody>
       </table>
      </div>

      <div class = "table_width">
       <table class="table table-bordered">
        <thead>
         <tr>
          <th>今週の投稿数</th>
          <th>先週の投稿数</th>
          <th>先週比</th>
         </tr>
        </thead>
        <tbody>
         <tr>
         　<td><%= @this_week_book.count %></td>
         　<td><%= @last_week_book.count %></td>
         　<td>
           <% if @last_week_book.count == 0 %>
            先週の投稿はありません
           <% else %>
           　<% @the_week_before =   @this_week_book.count / @last_week_book.count.to_f  %> <!--to_fメソッドはオブジェクトの少数点までの数値も表示-->
           　<%= (@the_week_before * 100).round %>
           <% end %>
          </td>
         </tr>
        </tbody>
       </table>
      </div>

   <h4>7日分の投稿数</h4>
      <div class = "table_width">
       <table class="table table-bordered">
        <thead>
         <tr>
          <th>6日前</th>
          <th>5日前</th>
          <th>4日前</th>
          <th>3日前</th>
          <th>2日前</th>
          <th>1日前</th>
          <th>今日</th>
         </tr>
        </thead>
        <tbody>
         <tr>
         　<td><%= @day6_ago_book.count %></td>
         　<td><%= @day5_ago_book.count %></td>
         　<td><%= @day4_ago_book.count %></td>
         　<td><%= @day3_ago_book.count %></td>
         　<td><%= @day2_ago_book.count %></td>
         　<td><%= @yesterday_book.count %></td>
         　<td><%= @today_book.count %></td>
         </tr>
        </tbody>
       </table>
      </div>

    </div>
  </div>
</div>
