<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books, book_detail: @book_detail %>

      <div class="my-3">
        <%= form_with url: user_daily_posts_path(@user), method: :get, class: "row justify-content-center", local: false do |f| %>
          <div class="col-auto">
            <%= f.date_field :created_at, class: "form-control" %>
          </div>
          <div class="col-auto">
            <%= f.submit "検索" , class: "btn btn-primary"%>
          </div>
        <% end %>
        <div id="search_result">
          <%# if @search_book.present? %>
            <%= render 'daily_posts', search_book: @search_book %>
          <%# end %>
        </div>
      </div>

      <%= render 'book_index',books: @books %>
    </div>
  </div>
</div>
